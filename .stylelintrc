{
    "extends": "stylelint-config-recommended-scss",
    "rules": {
        "max-nesting-depth": 3,
        "selector-pseudo-element-colon-notation": "single",
        "media-feature-name-disallowed-list": "max-width",
        "at-rule-empty-line-before": [
            "always",
            {
                "except": [
                    "first-nested"
                ],
                "ignore": [
                    "after-comment",
                    "inside-block"
                ],
                "ignoreAtRules": [
                    "import"
                ]
            }
        ],
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "import",
                    "include",
                    "mixin",
                    "extend"
                ]
            }
        ]
    }
}